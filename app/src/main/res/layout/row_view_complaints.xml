<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:id="@+id/rl_complaints_plan_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:id="@+id/tv_label_complaint_view"
        android:text="Reason: "
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/tv_complaint_reason_name"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/tv_label_complaint_view"
        android:text="Reason Name "
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_complaint_view_start_date"
        android:layout_below="@+id/tv_label_complaint_view"
        android:text="Date:  17 March, 2017"
        android:textColor="@color/app_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/tv_complaint_view_status"
        android:layout_below="@+id/tv_complaint_view_start_date"
        android:text="status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <ImageView
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_arrow_right"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <View
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tv_complaint_view_status"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        />

</RelativeLayout>