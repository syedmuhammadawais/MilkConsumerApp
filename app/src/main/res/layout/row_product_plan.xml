<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:background="@color/white"
    android:id="@+id/rl_product_plan_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:textSize="18sp"
        android:id="@+id/tv_product_label"
        android:text="Product: "
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_product_plan_name"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/tv_product_label"
        android:text="Product: "
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_product_start_date"
        android:layout_below="@+id/tv_product_label"
        android:text="Start Date 17 March, 2017: "
        android:textColor="@color/app_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:visibility="invisible"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_product_special_order"
        android:layout_below="@+id/tv_product_label"
        android:text="(Special Order)"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <ImageView
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_arrow_right"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <View
        android:id="@+id/v_below_border"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_product_start_date"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        android:layout_alignParentRight="true" />

</RelativeLayout>