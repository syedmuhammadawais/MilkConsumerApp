<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/product_bg"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <RelativeLayout

                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:paddingLeft="5dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/btn_back_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:src="@drawable/btn_back_design"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:paddingRight="16dp"
                    android:id="@+id/tv_weekly_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Schedule"
                    android:textColor="@color/bgblue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_special_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_login_bg_yellow_round"
                    android:padding="5dp"
                    android:text="One Time Order"
                    android:textAllCaps="false" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="5">


        <LinearLayout
            android:layout_weight="0.3"
            android:layout_marginBottom="5dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Rate: "
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_rate_ps"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Rs 100 per Liter"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_marginBottom="5dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Estimated Monthly Bill: "
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView

                android:textStyle="bold"
                android:id="@+id/tv_month_bill_repeat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="0 Rs"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <EditText
            android:drawableRight="@drawable/calender_icon"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:id="@+id/et_start_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.7"
            android:background="@drawable/login_user_pass_et_bg_round"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Order Delivery Start Date"
            android:inputType="text"
            android:maxLines="1"
            android:padding="14dp"
            android:textColorHint="@color/colorAccent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!-- Monday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                        android:id="@+id/tb_fps_monday_0"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:tbIsMidSelectable="false"
                        app:tbOnColor="@color/toggle_yellow" />

                    <TextView
                        android:id="@+id/et_time_monday_0"
                        app:backgroundTint="@color/monday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/bg_week_name_left_round_radius"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="Monday"
                        android:maxLines="1" />

                    <EditText
                        android:id="@+id/et_quantity_monday_0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/bg_week_quantity_right_round_radius"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColorHint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/tv_unit_monday_0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="ltr"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Tuesday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                        android:id="@+id/tb_fps_tuesday_1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:tbIsMidSelectable="false"
                        app:tbOnColor="@color/toggle_yellow" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="0.7"
                        android:background="@drawable/rectangle"
                        android:gravity="center_vertical"
                        android:text="MON"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/et_time_tuesday_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/bg_week_name_left_round_radius"
                        app:backgroundTint="@color/tuesday"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Tuesday"
                        android:textColor="@color/white" />


                    <EditText
                        android:id="@+id/et_quantity_tuesday_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/bg_week_quantity_right_round_radius"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColorHint="@color/colorAccent"  />

                    <TextView
                        android:id="@+id/tv_unit_tuesday_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="ltr"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Wednesday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                        android:id="@+id/tb_fps_wednesday_2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:tbIsMidSelectable="false"
                        app:tbOnColor="@color/toggle_yellow" />



                    <TextView
                        android:id="@+id/et_time_wednesday_2"
                        app:backgroundTint="@color/wednesday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/bg_week_name_left_round_radius"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="Wednesday"
                        android:maxLines="1" />


                    <EditText
                        android:id="@+id/et_quantity_wednesday_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/bg_week_quantity_right_round_radius"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColorHint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/tv_unit_wednesday_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="ltr"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Thursday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                        android:id="@+id/tb_fps_thursday_3"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:tbIsMidSelectable="false"
                        app:tbOnColor="@color/toggle_yellow" />




                    <TextView
                        android:id="@+id/et_time_thursday_3"
                        app:backgroundTint="@color/thursday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/bg_week_name_left_round_radius"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="Thursday"
                        android:maxLines="1" />


                    <EditText
                        android:id="@+id/et_quantity_thursday_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/bg_week_quantity_right_round_radius"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColorHint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/tv_unit_thursday_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="ltr"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Friday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="5">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="0.7"
                        android:background="@drawable/rectangle"
                        android:gravity="center_vertical"
                        android:text="MON"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                        android:id="@+id/tb_fps_friday_4"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:tbIsMidSelectable="false"
                        app:tbOnColor="@color/toggle_yellow" />

                    <TextView
                        android:id="@+id/et_time_friday_4"
                        app:backgroundTint="@color/friday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/bg_week_name_left_round_radius"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="Friday"
                        android:maxLines="1" />


                    <EditText
                        android:id="@+id/et_quantity_friday_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/bg_week_quantity_right_round_radius"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColorHint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/tv_unit_friday_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="ltr"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Saturday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                        android:id="@+id/tb_fps_saturday_5"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:tbIsMidSelectable="false"
                        app:tbOnColor="@color/toggle_yellow" />

                    <TextView
                        android:id="@+id/et_time_saturday_5"
                        app:backgroundTint="@color/saturday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/bg_week_name_left_round_radius"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="Saturday"
                        android:maxLines="1" />


                    <EditText
                        android:id="@+id/et_quantity_saturday_5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/bg_week_quantity_right_round_radius"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColorHint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/tv_unit_saturday_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="01"
                        android:gravity="center"
                        android:text="ltr"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Sunday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                        android:id="@+id/tb_fps_sunday_6"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:tbIsMidSelectable="false"
                        app:tbOnColor="@color/toggle_yellow" />



                    <TextView
                        android:id="@+id/et_time_sunday_6"
                        app:backgroundTint="@color/sunday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/bg_week_name_left_round_radius"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="Sunday"
                        android:maxLines="1" />

                    <EditText
                        android:id="@+id/et_quantity_sunday_6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/bg_week_quantity_right_round_radius"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColorHint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/tv_unit_sunday_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="ltr"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_fps_save_plan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="@drawable/btn_login_bg_yellow_round"
            android:text="Save Plan"
            android:textAllCaps="false"
            android:textColor="@color/app_black"
            android:textSize="22sp" />

    </LinearLayout>
</LinearLayout>